<% unless current_user == user %>
  <% if current_user.like?(question) %>
    <%= form_with(model: current_user.favorites.find_by(question_id: question.id), local:true, method: :delete) do |f| %>
      <%= hidden_field_tag :question_id, question.id %>
      <%= button_tag type: 'submit', class: 'btn btn-outline-danger' do %>
        <i class="fas fa-heart"></i>いいね中
      <% end %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :question_id, question.id %>
      <%= button_tag type: 'submit', class: 'btn btn-outline-primary' do %>
        <i class="far fa-heart"></i>いいねする
      <% end %>
    <% end %>
  <% end %>
<% end %>