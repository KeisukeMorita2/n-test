<div class="row">
    <div class="col-sm-6 offset-sm-3">
  
      <%= form_with(model: @question, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control', placeholder: "どんな分野の問題か簡単に入力してください" %>
        </div>
  
        <div class="form-group">
          <%= f.label :content, '問題' %>
          <%= f.text_area :content, class: 'form-control', rows:8, placeholder: "問題文を入力してください（２５５字以内）" %>
        </div>
  
        <div class="form-group">
          <%= f.label :answer, '答え' %>
          <%= f.text_area :answer, class: 'form-control', rows:8, placeholder: "答えを入力してください（２５５字以内）" %>
        </div>
        
        <div class="form-group">
          <%= f.label :image, '画像' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
  
        
        <%= f.submit '作成', class: 'btn btn-success btn-block' %>
      <% end %>
      
    </div>
  </div>
