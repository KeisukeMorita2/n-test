<div class="container">
  <div class="row">
  <aside class="col-sm-4">
    <div class="user-page shadow bg-light">
        <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: 'user-show-image' %>
        <% else %>
        <%= image_tag 'common.png', class: 'user-show-image' %>
        <% end %>
      <p class="text-center"><%= @user.name %></p>
      <hr>
      <div class="user-show-nav">
      <%= link_to 'ログアウト', session_path(current_user), method: :delete %>
      <%= link_to '退会', user_path(current_user), method: :delete %>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3 mt-3">
      <li class="nav-item"><a href="#" class="nav-link">質問</a></li>
      <li class="nav-item"><a href="#" class="nav-link">フォロー</a></li>
      <li class="nav-item"><a href="#" class="nav-link">フォロワー</a></li>
    </ul>
  </div>
</div>