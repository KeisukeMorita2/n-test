<div class="text-center">
  <h1>ユーザー情報変更</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control', placeholder: "名前を入力してください（１０字以内）" %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Eメール' %>
        <%= f.email_field :email, class: 'form-control', placeholder: "＠を入れてアドレスを入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: "1文字以上入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認用' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "上記のパスワードを再入力してください" %>
      </div>

      <%= f.submit '登録', class: 'btn btn-success btn-block' %>
    <% end %>
    
  </div>
</div>